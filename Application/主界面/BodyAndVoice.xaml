                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="33,33,33,33" x:Name="PART_Background">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                    <GradientStop Color="White" Offset="0.0" />
                                    <GradientStop Color="#FF4B80F1" Offset="0.5" />
                                    <GradientStop Color="#FF4B80F1" Offset="0.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Cursor="Hand" x:Name="button5" Opacity="1"  Foreground="White" Content="实验记录表" FontSize="26" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="175" Click="button5_Click_1" Canvas.Left="422" Canvas.Top="325">
