                                    <GradientStop Color="#FF4B80F1" Offset="0.5" />
                                    <GradientStop Color="#FF4B80F1" Offset="0.0" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Cursor="Hand" x:Name="button3" Opacity="1"  Foreground="White" Content="注销" FontSize="26" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="176" Click="button3_Click_1" Canvas.Left="165" Canvas.Top="468">
