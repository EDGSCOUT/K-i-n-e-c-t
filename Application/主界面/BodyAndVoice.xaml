                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Label x:Name="label" Content="当前被试编号：123456789" Canvas.Top="596" Width="266" FontSize="18" Canvas.Left="42" Foreground="#FF747070"/>
            <Button Cursor="Hand" x:Name="button4" Opacity="1"  Foreground="White" Content="量表" FontSize="26" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="174" Click="button4_Click_1" Canvas.Left="422" Canvas.Top="182">
